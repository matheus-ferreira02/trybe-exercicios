{
  "compilerOptions": {
    "target": "es2021",                                  
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",                    
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
